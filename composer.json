{
    "name": "thingston/log-manager",
    "description": "Flexible configured log pools for PHP applications implementing PSR-3.",
    "keywords": ["php", "log", "psr-3"],
    "homepage": "https://github.com/thingston/log-manager",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pedro Ferreira",
            "email": "pedro@thingston.com"
        }
    ],
    "support": {
        "issues": "https://github.com/thingston/log-manager/issues",
        "source": "https://github.com/thingston/log-manager",
        "docs": "https://github.com/thingston/log-manager/wiki"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "monolog/monolog": "^3.1",
        "psr/log": "^3.0",
        "thingston/settings": "^1.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.5",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/var-dumper": "^6.0",
        "thingston/coverage-check": "^1.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "autoload": {
        "psr-4": {
            "Thingston\\Log\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thingston\\Tests\\Log\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [],
        "post-update-cmd": [],
        "test": "phpunit --color=always",
        "coverage:text": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --color=always --coverage-text"
        ],
        "coverage:clover": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --color=always --coverage-clover=coverage.xml"
        ],
        "coverage:html": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --color=always --coverage-html=coverage"
        ],
        "coverage:check": [
            "@coverage:clover",
            "phpcov check:project coverage.xml"
        ],
        "analyze": "phpstan",
        "cs": "phpcs",
        "cbf": "phpcbf",
        "checks": [
            "@cs",
            "@analyze",
            "@coverage:check"
        ]
    }
}
